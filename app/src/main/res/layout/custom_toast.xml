<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_toast_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/shape_custom_toast_background">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_main"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie_anim_error.json"
        app:lottie_loop="true"
        app:lottie_speed="1"
        tools:background="@color/LightBrown" />

    <TextView
        android:id="@+id/custom_toast_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_main"
        android:background="@drawable/shape_rounded_kimberly_btn"
        android:padding="5dp"
        android:text="Custom Toast Message"
        android:textColor="@color/CLOUDS"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
