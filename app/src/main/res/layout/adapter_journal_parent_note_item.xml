<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="6dp"
    android:background="@drawable/background_item_cloud"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="5dp"
    android:backgroundTint="@color/CLOUDS"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_journal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Note_Title"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/NIGHT"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/noteSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="noteSubTitle"
            android:textColor="@color/NIGHT"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/noteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:maxLines="10"
            android:ellipsize="end"
            android:text="Note Contents Goes here"
            android:textColor="@color/NIGHT"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/noteDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Saturday, April 28, 2000: 14:02"
            android:textColor="@color/NIGHT"
            android:textSize="7sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>