<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.menu.subroutine.SubroutineFragment">

    <TextView
        android:id="@+id/TaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="DAILY SUBROUTINE TASK"
        android:textAlignment="center"
        android:textColor="@color/MIRAGE"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TaskSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TaskTitle"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:text="Subroutines helps you in reforming bad habits"
        android:textAlignment="center"
        android:textColor="@color/MIRAGE"
        android:textSize="15dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Add_Habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:backgroundTint="@color/CLOUDS"
        app:borderWidth="5dp"
        app:srcCompat="@drawable/ic_add" />
</RelativeLayout>