<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:width="24dp"
        android:height="24dp">
        <shape
            android:layout_width="wrap_content"
            android:shape="oval">
            <solid android:color="@color/CLOUDS" />
        </shape>
    </item>

    <item
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:width="24dp"
        android:height="24dp">
        <shape android:shape="oval">
            <stroke android:color="@color/NIGHT" android:width="1dp"/>
        </shape>
    </item>

</layer-list>