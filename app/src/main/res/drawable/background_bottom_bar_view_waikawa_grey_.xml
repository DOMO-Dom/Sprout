<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        >
        <shape android:shape="rectangle">
            <stroke android:color="@color/NIGHT" android:width="1dp"/>
            <corners android:radius="5sp"/>
            <solid android:color="@color/WAIKAWA_GREY"/>
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/NIGHT"/>
            <solid android:color="@color/CLOUDS"/>
        </shape>
    </item>
</layer-list>