<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/theme_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.setting.ui.ThemeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/theme_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/theme_card_view"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/theme_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Setting"
                    android:textColor="@color/NIGHT"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/theme_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/theme_card_view"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/settings_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:text="Select a theme for the application."
                android:textAlignment="center"
                android:textColor="@color/NIGHT"
                android:textSize="20sp"
                android:textStyle="normal" />

            <RadioGroup
                android:id="@+id/theme_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_lbl"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <RadioButton
                    android:id="@+id/systemTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:button="@drawable/selector_radio_btn_checked_state"
                    android:text="As in the system"
                    android:textColor="@color/NIGHT"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/lightTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:button="@drawable/selector_radio_btn_checked_state"
                    android:text="Light Theme"
                    android:textColor="@color/NIGHT"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/DarkTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:button="@drawable/selector_radio_btn_checked_state"
                    android:text="Dark Theme"
                    android:textColor="@color/NIGHT"
                    android:textSize="16sp" />
            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/theme_radio_group"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/selector_btn_normal"
                android:text="Select Theme"
                android:textAllCaps="false"
                android:textColor="@color/NIGHT"
                android:textSize="16sp"
                android:textStyle="normal" />
        </RelativeLayout>

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:layout_margin="20dp"-->
        <!--            android:text="This is for selecting themes, light, dark or system(default). Others to be added"-->
        <!--            android:textAlignment="center"-->
        <!--            android:textColor="@color/NIGHT"-->
        <!--            android:textSize="12dp" />-->

    </RelativeLayout>
</FrameLayout>