<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_introduction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simple_background_tempv3">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_bar"/>

    <TextView
        android:id="@+id/lbl_titleHeader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/sprout"
        android:textAlignment="center"
        android:textColor="#0D0D0D"
        android:textSize="34sp"
        android:textStyle="bold"
        android:padding="@dimen/relativeLayoutPadding"/>

    <TextView
        android:id="@+id/textView_startup_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:justificationMode="inter_word"
        android:paddingLeft="@dimen/relativeLayoutPadding"
        android:paddingRight="@dimen/relativeLayoutPadding"
        android:text="@string/textView_startup_introduction"
        android:textColor="@color/light_black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_continue"
        style="@style/style_continue"
        android:layout_marginBottom="@dimen/relativeLayoutPadding"
        android:layout_marginLeft="@dimen/relativeLayoutPadding"
        android:layout_marginRight="@dimen/relativeLayoutPadding"/>

</RelativeLayout>