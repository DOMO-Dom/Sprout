<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.getIdentityFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/relativeLayoutPadding"
        android:background="@drawable/simple_background_tempv1">

        <ImageView
            android:id="@+id/img_identity"
            android:layout_width="250dp"
            android:layout_height="220dp"
            android:layout_above="@id/lbl_askIdentity"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/identity_svg" />

        <TextView
            android:id="@+id/lbl_askIdentity"
            style="@style/textViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/identity_selection"
            android:letterSpacing=".05"
            android:text="How do you Identify?"
            android:textAlignment="center" />

        <RadioGroup
            android:id="@+id/identity_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_continue"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/id_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:checked="true"
                android:padding="20dp"
                android:text="Male"
                android:textAlignment="center"
                android:textColor="@drawable/radio_text_color_selector"
                android:textSize="@dimen/radio_button_textSize" />

            <RadioButton
                android:id="@+id/id_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:padding="20dp"
                android:text="Female"
                android:textAlignment="center"
                android:textColor="@drawable/radio_text_color_selector"
                android:textSize="@dimen/radio_button_textSize" />

            <RadioButton
                android:id="@+id/id_nonBinary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:padding="20dp"
                android:text="Non-Binary"
                android:textAlignment="center"
                android:textColor="@drawable/radio_text_color_selector"
                android:textSize="@dimen/radio_button_textSize" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_continue"
            style="@style/style_continue" />

    </RelativeLayout>
</FrameLayout>