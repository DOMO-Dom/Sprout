<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/analytic_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.analytic.AnalyticFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/analytic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:text="Your Progress Record"
                android:textAlignment="center"
                android:textColor="@color/NIGHT"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/analytic_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/analytic_title"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:text="Have a better understanding of your milestone!"
                android:textAlignment="center"
                android:textColor="@color/NIGHT"
                android:textSize="15dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/analytic_content"
        android:layout_width="match_parent"
        android:layout_below="@id/card_view"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_main"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie_anim_under-construction.json"
            app:lottie_loop="true"
            app:lottie_speed="1"
            tools:background="@color/WAIKAWA_GREY"/>

        <TextView
            style="@style/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lottie_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-90dp"
            android:textColor="@color/NIGHT"
            android:text="ANALYTICS" />

    </RelativeLayout>
</RelativeLayout>