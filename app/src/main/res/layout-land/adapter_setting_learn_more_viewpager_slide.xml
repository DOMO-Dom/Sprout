<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_setting_learn_more_viewpager_slide_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/adapter_setting_learn_more_viewpager_slide_logo_header"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_spout" />

    <TextView
        android:id="@+id/adapter_setting_learn_more_viewpager_slide_logo_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:text="@string/sprout"
        android:textAlignment="center"
        android:textColor="@color/NIGHT"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/learn_more_viewpager_slide_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/adapter_setting_learn_more_viewpager_slide_logo_header"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isScrollContainer="true">

            <TextView
                android:id="@+id/adapter_setting_learn_more_viewpager_slide_logo_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:justificationMode="inter_word"
                android:textColor="@color/NIGHT"
                android:textSize="13sp"
                android:textStyle="normal"
                tools:text="sample" />
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>