<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left=".5dp"
        android:right="0dp"
        android:top=".5dp"
        >
        <shape android:shape="rectangle">
            <stroke android:color="@color/NIGHT" android:width=".7dp"/>
            <corners android:radius="10dp"/>
            <solid android:color="@color/BRIGHT_SKY_BLUE"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="2dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke android:width=".7dp" android:color="@color/NIGHT"/>
            <corners android:radius="10dp"/>
            <solid android:color="@color/CLOUDS"/>
        </shape>
    </item>
</layer-list>