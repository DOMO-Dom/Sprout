<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/background_item_cloud"
    android:backgroundTint="@color/CLOUDS"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_home">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Procrastinating"
        android:textColor="@color/NIGHT"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:justificationMode="inter_word"
        android:text="\t\tProcrastination is the action of unnecessarily and voluntarily delaying or postponing something despite knowing that there will be negative consequences for doing so."
        android:textColor="@color/NIGHT"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="3dp"
            android:text="Date Started:"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"
            tools:text="Saturday, November 5, 2022: 12:25" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/daily_subroutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="3dp"
            android:text="Subroutines:"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/completed_subroutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"
            tools:text="7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="3dp"
            android:text="Day's of Abstinence:"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_days_of_abstinence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"
            tools:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="4dp"
            android:text="Relapse:"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_relapse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"
            tools:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_upvote_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:drawableStart="@drawable/ic_upvote"
            android:textColor="@color/NIGHT"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/home_downvote_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:drawableStart="@drawable/ic_downvote"
            android:textColor="@color/NIGHT"
            android:layout_marginEnd="10dp"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/home_modify_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Modify"
            android:textColor="@color/NIGHT"
            android:textSize="11sp" />

        <Button
            android:id="@+id/home_relapse_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Relapse"
            android:textColor="@color/NIGHT"
            android:textSize="11sp" />

        <Button
            android:id="@+id/home_drop_btn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Drop"
            android:textColor="@color/NIGHT"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>