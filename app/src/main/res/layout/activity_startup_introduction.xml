<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_introduction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/relativeLayoutPadding">

    <TextView
        android:id="@+id/lbl_titleHeader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/sprout"
        android:textAlignment="center"
        android:textColor="#0D0D0D"
        android:textSize="34sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView_startup_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:justificationMode="inter_word"
        android:text="@string/textView_startup_introduction"
        android:textColor="@color/light_black"
        android:textSize="20sp"
        android:textStyle="normal" />


    <Button
        android:id="@+id/btn_continue"
        style="@style/style_continue" />

</RelativeLayout>