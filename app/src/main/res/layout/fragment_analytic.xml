<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/analytic_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.analytic.AnalyticFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/analytic_top_bar"
            android:background="@drawable/background_topbar_view_brightsky_blue"
            android:layout_height="?android:attr/actionBarSize">

            <TextView
                android:id="@+id/analytic_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Your Progress Record"
                android:textColor="@color/NIGHT"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/analytic_content"
        android:layout_width="match_parent"
        android:layout_below="@id/analytic_top_bar"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_main"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie_anim_under-construction.json"
            app:lottie_loop="true"
            app:lottie_speed="1"
            tools:background="@color/WAIKAWA_GREY"/>

        <TextView
            style="@style/textViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lottie_main"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-90dp"
            android:textColor="@color/NIGHT"
            android:text="ANALYTICS" />

    </RelativeLayout>
</RelativeLayout>