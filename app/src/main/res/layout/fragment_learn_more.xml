<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/learn_more_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.setting.ui.LearnMoreFragment">

    <RelativeLayout
        android:id="@+id/setting_learn_more_top_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/background_topbar_view_brightsky_blue">

        <TextView
            android:id="@+id/settingLearnMoreHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Learn More About Sprout"
            android:textColor="@color/NIGHT"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_learn_more_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_learn_more_top_bar">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/learn_more_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/setting_learn_more_dots_layout" />

        <LinearLayout
            android:id="@+id/setting_learn_more_dots_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:minHeight="60dp"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/setting_learn_more_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_btn_normal_selector_waikawa_grey"
            android:paddingStart="-5dp"
            android:text="Back"
            android:textColor="@color/NIGHT"
            android:textSize="13sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/setting_learn_more_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_btn_normal_selector_waikawa_grey"
            android:paddingStart="-5dp"
            android:text="Next"
            android:textColor="@color/NIGHT"
            android:textSize="13sp"/>
    </RelativeLayout>
</RelativeLayout>