<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onBoarding.assessment.AnalysisFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textViewHeader"
            style="@style/textViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/relativeLayoutPadding"
            android:text="Analysis Result"
            android:textAlignment="center"
            android:textColor="@color/NIGHT" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textSubHeader"
                style="@style/textViewSubHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/relativeLayoutPadding"
                android:layout_marginBottom="0dp"
                android:justificationMode="inter_word"
                android:padding="30dp"
                android:text="You scored 70 and it has been noted that your struggling with breaking from bad habit of your's we suggest you to choose on the list of habit you wanna break"
                android:textAlignment="center"
                android:textColor="#FAFAFA"
                android:textSize="18sp"
                tools:text="Sample Text Goes Here: " />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textSubHeader"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"

                android:layout_marginBottom="200dp">

                <AutoCompleteTextView
                    android:id="@+id/dropItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Predefined Habits"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_continue"
                style="@style/btn_continue_portrait"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/relativeLayoutPadding"
                android:layout_marginRight="@dimen/relativeLayoutPadding"
                android:layout_marginBottom="@dimen/relativeLayoutPadding"
                android:background="@drawable/selector_btn_continue"
                android:textColor="@color/NIGHT" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>