<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_us_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.setting.ui.AboutUsFragment">

    <RelativeLayout
        android:id="@+id/setting_about_us_profile_top_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/background_topbar_view_nephritis">

        <TextView
            android:id="@+id/settingLearnMoreHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="About Us"
            android:textColor="@color/NIGHT"
            android:textSize="@dimen/sp20"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_about_us_profile_top_bar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:orientation="vertical"
                android:padding="@dimen/sp16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_item"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="@dimen/sp20"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/about_us_sprout_logo"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="-50dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="sprout-splash-screen.json"
                            app:lottie_loop="true"
                            app:lottie_speed="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-55dp"
                            android:text="@string/sprout"
                            android:textColor="@color/NIGHT"
                            android:textSize="@dimen/sp24"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:justificationMode="inter_word"
                        android:letterSpacing=".03"
                        android:text="\t\t\t\tThe Sprout was chosen as its application name, because just like a sprout plant, the application aims to help users reshape and change their negative habits, similar to how a sprout grows from a seed into a mature plant."
                        android:textColor="@color/NIGHT"
                        android:textSize="@dimen/sp14"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:justificationMode="inter_word"
                        android:letterSpacing=".03"
                        android:text="\t\t\t\tThe application guides, support, and help reforms users' habits, just as a sprout needs proper care and guidance to grow into a healthy plant."
                        android:textColor="@color/NIGHT"
                        android:textSize="@dimen/sp14"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:justificationMode="inter_word"
                        android:letterSpacing=".03"
                        android:text="\t\t\t\tThe application also emphasizes the importance of starting small and breaking down a habit into manageable tasks, similar to how a sprout starts as a small seed before growing into a mature plant."
                        android:textColor="@color/NIGHT"
                        android:textSize="@dimen/sp14"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:justificationMode="inter_word"
                        android:letterSpacing=".03"
                        android:text="\t\t\t\tOverall, the application and the sprout plant share the common goal of growth and development."
                        android:textColor="@color/NIGHT"
                        android:textSize="@dimen/sp14"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/background_item">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15sp"
                        android:justificationMode="inter_word"
                        android:letterSpacing=".05"
                        android:text="Team"
                        android:textColor="@color/NIGHT"
                        android:textSize="@dimen/sp20"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/about_us_sir_buen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_about_us" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DARYL V. BUEN, MIT, MAEd, LPT"
                                android:textColor="@color/NIGHT"
                                android:textSize="@dimen/sp16"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Research Adviser"
                                android:textColor="@color/NIGHT"
                                android:textSize="@dimen/sp14"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/about_us_almazan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_about_us" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gilbert C. Almazan"
                                android:textColor="@color/NIGHT"
                                android:textSize="@dimen/sp16"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Team Leader, Researcher"
                                android:textColor="@color/NIGHT"
                                android:textSize="@dimen/sp14"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/about_us_gabayan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_about_us" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bernalyn Y. Gabayan"
                                android:textColor="@color/NIGHT"
                                android:textSize="@dimen/sp16"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Researcher"
                                android:textColor="@color/NIGHT"
                                android:textSize="@dimen/sp14"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/about_us_tamag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_about_us" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Janella D. Tamag"
                                android:textColor="@color/NIGHT"
                                android:textSize="@dimen/sp16"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Researcher"
                                android:textColor="@color/NIGHT"
                                android:textSize="@dimen/sp14"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>