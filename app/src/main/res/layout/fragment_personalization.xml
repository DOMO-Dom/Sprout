<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/relativeLayoutPadding"
    android:weightSum="10"
    tools:context=".ui.onBoarding.assessment.PersonalizationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/assessment_progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/KIMBERLY"
            app:trackThickness="5dp"
            tools:max="6"
            tools:progress="5" />

        <TextView
            android:id="@+id/lbl_titleMainHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/assessment_progressBar"
            android:text="@string/personalization"
            android:textColor="@color/NIGHT"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_subHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_titleMainHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/habit_reform_and_routine_management"
            android:textAlignment="viewStart"
            android:textColor="@color/NIGHT"
            android:textSize="16sp" />
    </RelativeLayout>

    <!--        For long questions-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:text="@{question}"
                android:textColor="@color/NIGHT"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="Question: How would you like your text be seen" />

            <RadioGroup
                android:id="@+id/radioGroupSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_question"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/radio_margin_bottom"
                android:gravity="bottom"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_aSelect"
                    style="@style/radioButtonPortrait"
                    android:checked="true"
                    android:text="@{aSelect}"
                    tools:text="Yes Good Day" />

                <RadioButton
                    android:id="@+id/radio_bSelect"
                    style="@style/radioButtonPortrait"

                    tools:text="Very Nice Day to work on something so cool" />

                <RadioButton
                    android:id="@+id/radio_cSelect"
                    style="@style/radioButtonPortrait"
                    tools:text="third selection" />

                <RadioButton
                    android:id="@+id/radio_dSelect"
                    style="@style/radioButtonPortrait"
                    tools:text="Last Radio Button Container DA FAK" />
            </RadioGroup>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_continue"
            style="@style/btn_continue_portrait" />
    </RelativeLayout>
</LinearLayout>