<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.onboarding.personalizationFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_background_tempv1"
        android:orientation="vertical"
        android:padding="@dimen/relativeLayoutPadding"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ProgressBar
                android:id="@+id/assestment_progressBar"
                style="@style/style_progressBar" />

            <TextView
                android:id="@+id/lbl_titleMainHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/assestment_progressBar"
                android:text="@string/personalization"
                android:textColor="@color/NIGHT"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_subHeader1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_titleMainHeader"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/habit_reform_and_routine_management"
                android:textAlignment="viewStart"
                android:textColor="@color/NIGHT"
                android:textSize="16sp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:scrollbars="none"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:text="Question: A sample question description"
                    android:textColor="@color/NIGHT"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radiogroupSelect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:layout_below="@id/lbl_question"
                    android:layout_marginBottom="@dimen/radio_margin_bottom"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_aselect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="@dimen/radio_margin_bottom"
                        android:background="@drawable/radio_selector"
                        android:button="@null"
                        android:checked="true"
                        android:padding="20dp"
                        android:text="ASELECT"
                        android:textAlignment="center"
                        android:textColor="@drawable/radio_text_color_selector"
                        android:textSize="@dimen/radio_button_textSize" />

                    <RadioButton
                        android:id="@+id/radio_bselect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="@dimen/radio_margin_bottom"
                        android:background="@drawable/radio_selector"
                        android:button="@null"
                        android:contentDescription="BSLECT"
                        android:padding="20dp"
                        android:text="BSLECT"
                        android:textAlignment="center"
                        android:textColor="@drawable/radio_text_color_selector"
                        android:textSize="@dimen/radio_button_textSize" />

                    <RadioButton
                        android:id="@+id/radio_cselect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="@dimen/radio_margin_bottom"
                        android:background="@drawable/radio_selector"
                        android:button="@null"
                        android:contentDescription="CSELECT"
                        android:padding="20dp"
                        android:text="CSELECT"
                        android:textAlignment="center"
                        android:textColor="@drawable/radio_text_color_selector"
                        android:textSize="@dimen/radio_button_textSize" />

                    <RadioButton
                        android:id="@+id/radio_dselect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="@dimen/radio_margin_bottom"
                        android:background="@drawable/radio_selector"
                        android:button="@null"
                        android:contentDescription="DSELECT"
                        android:padding="20dp"
                        android:text="DSELECT"
                        android:textAlignment="center"
                        android:textColor="@drawable/radio_text_color_selector"
                        android:textSize="@dimen/radio_button_textSize" />
                </RadioGroup>

            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_continue"
                style="@style/style_continue" />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>