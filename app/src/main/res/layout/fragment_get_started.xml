<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.onboarding.getStartedFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/simple_background_tempv2"
        android:orientation="vertical"
        android:weightSum="7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                style="@style/textViewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/relativeLayoutPadding"
                android:text="@string/sprout"
                android:textAlignment="center"
                android:textColor="@color/CLOUDS" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/view_background"
            android:layout_weight="4">

            <TextView
                android:id="@+id/lbl_welcome"
                style="@style/textViewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:textColor="@color/CLOUDS"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textSubHeader"
                style="@style/textViewSubHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_welcome"
                android:layout_marginTop="@dimen/relativeLayoutPadding"
                android:layout_marginBottom="0dp"
                android:justificationMode="inter_word"
                android:padding="30dp"
                android:text="You have the control to the power to transform your life for the best.\n\nAre you prepared to the path of fixing bad habits?"
                android:textAlignment="center"
                android:textColor="@color/CLOUDS"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_continue"
                style="@style/style_continue"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/relativeLayoutPadding"
                android:layout_marginRight="@dimen/relativeLayoutPadding"
                android:layout_marginBottom="@dimen/relativeLayoutPadding"
                android:background="@drawable/rounded_white_btn"
                android:text="GET STARTED"
                android:textColor="@color/NIGHT" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>