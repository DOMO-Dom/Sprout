<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_item_on_click_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TRANSPARENT"
    tools:context=".ui.menu.home.ui.HomeItemOnClickFragment">

    <!--topbar-->
    <RelativeLayout
        android:id="@+id/home_item_on_click_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_top_bar_view_waikawa_grey"
        android:visibility="visible">

        <!--color picker-->
        <LinearLayout
            android:id="@+id/home_item_on_click_miscellaneous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/home_item_on_click_layout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/TRANSPARENT"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="3dp"
                android:text="Pick Color"
                android:textAllCaps="false"
                android:textColor="@color/NIGHT" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <FrameLayout
                    android:id="@+id/color_cloud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/cloud_misc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_color_selection_cloud" />

                    <ImageView
                        android:id="@+id/cloud_selected"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        app:tint="@color/NIGHT"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/color_alzarin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/alzarin_misc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_color_selection_alzarin" />

                    <ImageView
                        android:id="@+id/alzarin_selected"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        app:tint="@color/NIGHT"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/color_amethyst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/amethyst_misc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_color_selection_amethyst" />

                    <ImageView
                        android:id="@+id/amethyst_selected"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        app:tint="@color/NIGHT"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/color_brightsky_blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/brightsky_blue_misc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_color_selection_brightsky_blue" />

                    <ImageView
                        android:id="@+id/brightsky_blue_selected"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        app:tint="@color/NIGHT"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/color_nephritis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/nephritis_misc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_color_selection_nephritis" />

                    <ImageView
                        android:id="@+id/nephritis_selected"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        app:tint="@color/NIGHT"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/color_sunflower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/sunflower_misc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_color_selection_sunflower" />

                    <ImageView
                        android:id="@+id/sunflower_selected"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        app:tint="@color/NIGHT"
                        tools:ignore="ContentDescription" />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!--topbar label-->
        <RelativeLayout
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_below="@id/home_item_on_click_miscellaneous">

            <TextView
                android:id="@+id/recommended_percent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/home_item_on_click_color_selector"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/PETER_RIVER"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="63%" />

            <TextView
                android:id="@+id/home_item_on_click_habit_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/recommended_percent"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:text="HABIT TITLE"
                android:textColor="@color/NIGHT"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/home_item_on_click_color_selector"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_color_indicator_clouds" />

        </RelativeLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_item_on_click_nested_scroll_view"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/home_item_on_click_top_bar"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--view container-->
            <LinearLayout
                android:id="@+id/home_item_on_click_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/TRANSPARENT"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_item_on_click_habit_description_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="\u2022 Description"
                    android:textAlignment="viewStart"
                    android:textColor="@color/NIGHT"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_item_on_click_habit_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:justificationMode="inter_word"
                    android:text="\t\t\tSubroutine Description: Procrastination is the bad habit of putting off until the day after tomorrow what should have been done the day before yesterday."
                    android:textColor="@color/NIGHT"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_item_on_click_habit_status_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="\u2022 Status:"
                        android:textColor="@color/NIGHT"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/home_item_on_click_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/NIGHT"
                        android:textSize="13sp"
                        tools:text="Status Type Placeholder" />
                </LinearLayout>

                <TextView
                    android:id="@+id/home_item_on_click_habit_date_started_on_reform_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="\u2022 Date Started"
                    android:textAlignment="viewStart"
                    android:textColor="@color/NIGHT"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_item_on_click_habit_date_started_on_reform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/NIGHT"
                    android:textSize="13sp"
                    tools:text="Date started placeholder" />

                <TextView
                    android:id="@+id/home_item_on_click_habit_total_days_of_abstinence_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="\u2022 Elapsed Abstinence"
                    android:textColor="@color/NIGHT"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_item_on_click_habit_total_days_of_abstinence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:text=""
                    android:textColor="@color/NIGHT"
                    android:textSize="13sp"
                    tools:text="Elapsed abstinence placeholder" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_item_on_click_habit_total_subroutine_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="\u2022 Completed Subroutines:"
                        android:textColor="@color/NIGHT"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/home_item_on_click_habit_total_subroutine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textColor="@color/NIGHT"
                        android:textSize="13sp"
                        tools:text="completed subroutine placeholder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_item_on_click_habit_relapse_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="\u2022 Relapse:"
                        android:textAlignment="viewStart"
                        android:textColor="@color/NIGHT"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/home_item_on_click_habit_relapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:text=""
                        android:textColor="@color/NIGHT"
                        android:textSize="13sp"
                        tools:text="Relapse counter placeholder" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/home_item_on_click_container">

                <!--CommentView-->
                <LinearLayout
                    android:id="@+id/home_item_on_click_habit_comment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_child_item_view_waikawa_grey"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/comment_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Note"
                        android:textAlignment="center"
                        android:textColor="@color/NIGHT"
                        android:textSize="13sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toTopOf="@+id/home_comment_recycler_view"
                        app:layout_constraintHeight_default="wrap"
                        app:layout_constraintTop_toTopOf="@+id/home_comment_recycler_view">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/home_comment_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHeight_max="150dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:itemCount="8"
                            tools:listitem="@layout/adapter_home_parent_habit_on_item_click_comment_item" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/add_comment_relative_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/add_comment_input_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:hint="Comment"
                            android:maxLines="5"
                            android:minHeight="30dp"
                            android:textColor="@color/NIGHT"
                            android:textColorHint="@color/NIGHT"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/add_comment_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/background_btn_normal_selector_waikawa_grey"
                            android:drawableStart="@drawable/ic_enter"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="5dp"
                            android:textSize="0sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>