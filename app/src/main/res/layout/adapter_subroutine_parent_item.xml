<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subroutine_parent_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="12dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/habitOnReform_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Lorem Ipsum"
        android:textColor="@color/NIGHT"
        android:textSize="11sp"
        android:background="@drawable/selector_btn_continue"
        android:textAlignment="viewStart"
        android:paddingLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subroutine_child_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="3"
        android:visibility="gone"
        android:layoutAnimation="@anim/layout_animation"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/adapter_subroutine_child_item" />
</LinearLayout>