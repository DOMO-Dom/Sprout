<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sprout">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sprout"
        tools:targetApi="31">
        <!--        android:screenOrientation="locked"-->
        <activity
            android:name=".activity.startup.get.Personalization"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activity.startup.GetStarted"
            android:exported="false"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".activity.startup.get.Identity"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="sensorPortrait"
            android:exported="false" />
        <activity
            android:name=".activity.startup.get.Nickname"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="sensorPortrait"
            android:exported="false" />
        <activity
            android:name=".activity.startup.Greetings"
            android:screenOrientation="sensorPortrait"
            android:exported="false" />
        <activity
            android:name=".activity.startup.Initial"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="sensorPortrait"
            android:exported="false" />
        <activity
            android:name=".activity.startup.EULA"
            android:screenOrientation="sensorPortrait"
            android:exported="false" />
        <activity
            android:name=".activity.startup.Introduction"
            android:screenOrientation="sensorPortrait"
            android:exported="false" />
        <activity
            android:name=".activity.startup.get.CommonWakeUp"
            android:screenOrientation="sensorPortrait"
            android:alwaysRetainTaskState="true"
            android:exported="false" />
        <activity
            android:name=".activity.startup.get.CommonSleepTime"
            android:screenOrientation="sensorPortrait"
            android:alwaysRetainTaskState="true"
            android:exported="false" />
        <activity
            android:name=".activity.Main"
            android:screenOrientation="sensorPortrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <!--    Read External Storage-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>