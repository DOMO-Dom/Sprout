<?xml version="1.0" encoding="utf-8"?>
<com.apachat.swipereveallayout.core.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modify_subroutine_parent_item_layout"
    android:layout_width="match_parent"
    app:mode="same_level"
    app:minDistRequestDisallowParent="20dp"
    app:dragEdge="left"
    android:elevation="60dp"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_subroutine_modify">

    <!--    Swipe Reveal-->
    <RelativeLayout
        android:id="@+id/modify_subroutine_parent_item_layout_control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:background="@drawable/background_btn_delete_alzarin_selector">

        <ImageView
            android:id="@+id/modify_subroutine_parent_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:maxLines="1"
            android:minWidth="0dp"
            android:minHeight="40dp"
            android:paddingStart="10dp"
            android:src="@drawable/ic_delete_light"
            android:textAllCaps="false"
            android:textSize="0sp" />
    </RelativeLayout>

<!--    Main Layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/modify_subroutine_parent_item_layout_subroutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_child_item_view_amethyst"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/modify_subroutine_parent_item_card_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:text="Lorem Dolor"
                android:textColor="@color/NIGHT"
                android:textSize="@dimen/sp16"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/modify_subroutine_parent_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/modify_subroutine_parent_item_card_view_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/NIGHT"
                android:textSize="@dimen/sp14"
                tools:text="Sample description" />
        </RelativeLayout>


    </LinearLayout>

</com.apachat.swipereveallayout.core.SwipeLayout>